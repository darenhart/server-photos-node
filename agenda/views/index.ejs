<!DOCTYPE html>
<html ng-app='Agenda'>
	<head>
		<script src="javascripts/angular.min.js"></script>
		<script src="javascripts/AgendaController.js"></script>
		<script src="javascripts/jquery.min.js"></script>

		<link rel="stylesheet" href="stylesheets/bootstrap.css">
		<link rel="stylesheet" href="stylesheets/bootstrap-theme.css">
		<link rel="stylesheet" href="stylesheets/style.css">
		<script src="javascripts/bootstrap.js"></script>

	</head>
	<body>

		<div ng-controller='ContactCtrl' class='container'>
		
			<h1>Agenda</h1>
		
			<form ng-submit='save()' class="form-inline">
				<div class="form-group">
					<input class="form-control" placeholder='Name' ng-model='contact.name'>
				</div>
				<div class="form-group">
					<input class="form-control" placeholder='Phone' ng-model='contact.phone'>
				</div>
				<button type='submit' class="btn" >
					<span class="glyphicon glyphicon-plus"></span>
				</button>
				<p class="text-warning bg-danger">{{tx.messageSaveContact}}</p>
			</form>

			<table class="table container">
				<thead>
					<tr>
						<th></th>
						<th>
							<input class="form-control" placeholder="Name" ng-model='search.name'>
						</th>
						<th>
							<input class="form-control" placeholder="Phone" ng-model='search.phone'>
						</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<tr ng-repeat='contact in contacts | filter:search | orderBy:order'>
						<td></td>
						<td>
							{{contact.name}}
						</td>
						<td>
							{{contact.phone}}
						</td>
						<td>
							<button ng-click='remove(contact)' class="btn">
								<span class="glyphicon glyphicon-trash"></span>
							</button>
						</td>
					</tr>
					<tr ng-hide='contacts.length'><td>No contact</td></tr>
				</tbody>
			</table>
			<p>{{tx.messageContacts}}</p>
		</div>
	</body>
</html>
